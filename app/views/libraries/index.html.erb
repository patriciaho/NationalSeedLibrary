<div class="left_side">
<h1>Find a Seed Library</h1>

<div class="search_bar_container">
  <div class="search_text">
    Find by location:
  </div>
  <div class="8">
    <%= form_tag libraries_path, :method => :get do %>
        <%= text_field_tag :search, params[:search], :class => "form-control search_box" %>
        <% if params[:search] %>
          <% @location = params[:search] %>
        <% else %>
          <% @location = "goofy" %>
        <% end %>
        <%= submit_tag "Search Near", :class => "btn btn-success search_near_button", :name => nil %>
    <% end %>
  </div>
</div>

<div>
  <div id="map-canvas"></div>
</div>

<div class="col-md-6 library_list">
  <% @libraries.each do |library| %>
    <%= link_to library.name, library_path(library) %><br />
    <%= library.address %>
    <br />
    <% if @location !="goofy" && @location != '' %>
      <em><%= library.distance_from(@location).round(2) %> miles</em>
    <% end %>
    <br />
    <br />
  <% end %>
  <%= link_to 'Add New', new_library_path, :class => "btn btn-success" %>
</div>
