<%= form_for @seed, :url => seed_path, :html => { :multipart => true } do |f| %>
  <%=f.label :common_name %>
  <%=f.text_field :common_name %><br />
  <%=f.label :scientific_name %>
  <%=f.text_field :scientific_name %><br />
  <%=f.label :planting_season %>
  <%=f.select :planting_season, ['Summer', 'Winter'] %><br />
  <%=f.label :description %>
  <%=f.text_area :description %><br />
  <%=f.label :quantity %>
  <%=f.number_field :quantity %><br />
  <%=f.label :harvest_photo %>
  <%= f.cropbox :harvest_photo, :width => 500 %>
  <%= f.crop_preview :harvest_photo, :width => 150 %>
  <%=f.label :plant_photo %>
  <%= f.file_field :plant_photo %>
  <%=f.label :seed_photo %>
  <%= f.file_field :seed_photo %>
  <%=f.submit %>
<% end %>